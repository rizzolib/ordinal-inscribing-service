{
  "compilerOptions": {
    // "moduleResolution": "node",
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "es6"
    ],
    "rootDir": ".",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}